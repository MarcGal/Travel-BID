<h2>Bid Info</h2>

<h4><%= bid.userID.name %></h4>
<h4><%= bid.bidValue %></h4>
<h4><%= bid.bidDescription %></h4>

<% if (bid.userID == userID && bid.Status === 0) { %>
  <div>
    <form action="/dashboard/bid/<%= bid._id %>/update" method="get">
      <input type="submit" value="Update">
    </form>
    <form action="/dashboard/bid/<%= bid._id %>/delete" method="post">
      <input type="submit" value="delete">
    </form>
  </div>
<% } %>

<% if (bid.userID == userID && bid.Status === 1) { %>
 <h4>Congratulations, your bid was accepted</h4>
<% } %>

<% if (bid.userID == userID && bid.Status === 2) { %>
 <h4>Sorry, your bid was rejected</h4>
<% } %>

<% if (offer.userID == userID && bid.Status === 0) { %>
  <div>
    <form action="/dashboard/bid/<%= bid._id %>/accept" method="get">
      <input type="submit" value="Accept">
    </form>
    <form action="/dashboard/bid/<%= bid._id %>/decline" method="get">
      <input type="submit" value="Decline">
    </form>
  </div>
<% } %>
</div>