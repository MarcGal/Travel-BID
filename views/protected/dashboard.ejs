<h4 class="text-center"><a class="btn btn-info" href="/dashboard/create">Create Offer</a></h4>

<div class="row">
  <div class="col-12">
   <h3>Your Bids</h3>
  </div>
  <div class="container">
      <% bids.forEach((bid) => { %>
        <div class="card" style="margin-top:1rem; margin-bottom: 1rem" >
           <div class="card-body">
             <h5 class="card-title">Value: <%= bid.bidValue %></h5>
             <p class="card-text">Description: <%= bid.bidDescription %></p>
             <% if (bid.Status === 1) { %> 
               <div class="alert alert-success" role="alert">
                 Bid Aceptada !!!
               </div><% 
             } else { %> 
               <div class="alert alert-primary" role="alert">
                 Bid abierta!!!
               </div>
               <% } %>
         <a href="/dashboard/bid/<%= bid._id %>" class="btn btn-dark">Info</a>
       </div>
    </div>
    <% }) %>
  </div>
</div>



