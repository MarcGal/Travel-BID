<div class="container">
  <div style="margin-top:1rem;">
      <form class="form-inline my-2 my-lg-0" action="/dashboard/search" method="get">
        <input class="form-control mr-sm-2" type="text" name="search" id="" placeholder="Search Offers">
        <input class="btn btn-outline-dark my-2 my-sm-0" type="submit" value="Search" id="button-search">
      </form>  
    </div>  
<div class="row ">
  <div class="col-12">
    <h3>Your Offers</h3>
  </div>
  <div class="container">
    <% offers.forEach((offer) => { %>
      <div class="card" style="margin-top:1rem; margin-bottom: 1rem" >
         <div class="card-body">
           <h5 class="card-title"><%= offer.location %></h5>
           <p class="card-text">Offered budget: <%= offer.budget %></p>
           <% if (offer.Status === 1) { %> 
             <div class="alert alert-success" role="alert">
               Oferta cerrada !!!
             </div><% 
           } 
           else { %> 
             <div class="alert alert-primary" role="alert">
               Oferta abierta!!!
             </div>
             <% } %>
       <a href="/dashboard/offer/<%= offer._id%>" class="btn btn-dark">Info</a>
     </div>
  </div>
