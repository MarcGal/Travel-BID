<h1>Welcome <%= currentUser.name %> </h1>
<br>
<div>
  <h3>Open Offers</h3>
  <div>
    <% offers.forEach((offer) => { %>
      <div>
        <div <% if ( offer.Status === 1) { %> class="alert alert-success" <% 
          } else { %> class= "alert alert-light" <% } %> >
          <a href="/dashboard/offer/<%= offer._id%>">
              <%= offer.location %> <br>
             Offered budget: <%= offer.budget %><br><br>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<h4><a class="btn btn-primary" href="/dashboard/create">Create Offer</a></h4>

<br>
<br>
<div>
  <h3>Open Bids</h3>
  <div>
    <% bids.forEach((bid) => { %>
      <div>
        <div <% if ( bid.Status === 1) { %> class="alert alert-success" <% 
          } else if ( bid.Status === 2) { %> class= "alert alert-danger" <% 
          } else { %> class= "alert alert-light" <% } %> >
            <a href="/dashboard/bid/<%= bid._id %>">
            Value: <%= bid.bidValue %> <br>
            Description: <%= bid.bidDescription %><br><br>
            </a>
          </div>
      </div>
    <% }) %>
  </div>
</div>

<br>
<form class="active-cyan-3 active-cyan-4 mb-4" action="/dashboard/search" method="get">
    <label for="search"></label>
    <input class="form-control mr-sm-2"type="text" name="search" id="">
    <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="search">
</form>

<br>
<a href="/logout">Logout</a>


