<form class="container text-center" id="form" action="/dashboard/offer/<%= offer._id%>/update" method="POST">
  <div class="form-group">
    <label for="from">From:</label>
    <input type="date" class="form-control-lg border border-primary" id="from" name="from" value="<%= offer.from %>">
  </div>
  <div class="form-group">
    <label for="until"> Until:</label>
    <input type="date" class="form-control-lg border border-primary" id="until" name="until"  value="<%= offer.until %>">
  </div>
  <!--<div class="form-group">
    <label for="location"> Location:</label>
    <input type="text" class="form-control-lg border border-primary" id="location" name="location" value="<%= offer.location %>">
  </div>-->
  <div class="form-group">
    <label for="budget">Budget:</label>
    <input type="text" class="form-control-lg border border-primary" name="budget" placeholder="budget" value="<%= offer.budget %>">
  </div>
  
  <button class="btn btn-primary" type="submit">Update</button>
  <br>
  <a href="/dashboard/offer/<%= offer._id%>">Cancel</a>
</form>
