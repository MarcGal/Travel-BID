<h2>Offer info</h2>

<div>
  <%= offer.location %> <br>
  From: <%= offer.from %> <br>
  Until: <%= offer.until %> <br>
  Offered budget: <%= offer.budget %>

<% if (offer.userID == userID) { %>
  <div>
    <form action="/dashboard/offer/<%= offer._id %>/update" method="get">
      <input type="submit" value="Update">
    </form>
    <form action="/dashboard/offer/<%= offer._id %>/delete" method="post">
      <input type="submit" value="delete">
    </form>
  </div>
<% } %>

</div>



<% if (offer.userID != userID) { %>

<div>
  <form action="/#" method="post">
    <input type="submit" value="bid">
  </form>
</div>

<% } %>

<a href="/dashboard">Home</a>
 

